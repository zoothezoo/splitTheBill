<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/constraintLayout"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2">

        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/clForTotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipTotal" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toEndOf="@+id/txTotal" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp" android:hint="number" android:gravity="right"/>
            <TextView
                    android:text="Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txTotal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/ipTotal"
                    app:layout_constraintTop_toTopOf="@+id/ipTotal" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/clForMen"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/clForSenior"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/clForMiddle">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipMen" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/txMen"
                    android:hint="number" android:gravity="right" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="Men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txMen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipMen"
                    app:layout_constraintBottom_toBottomOf="@+id/ipMen" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/clForWomen"
                app:layout_constraintBottom_toBottomOf="@+id/clForJunior" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/clForMiddle">

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipWomen" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/txWomen"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                    android:hint="number" android:gravity="right"/>
            <TextView
                    android:text="Women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txWomen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipWomen"
                    app:layout_constraintBottom_toBottomOf="@+id/ipWomen" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/clForSenior"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="8dp">

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipSenior"
                    android:hint="number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:singleLine="false"
                    android:selectAllOnFocus="false" android:gravity="right" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="Senior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipSenior"
                    app:layout_constraintBottom_toBottomOf="@+id/ipSenior" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/clForMiddle"
                app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/clForSenior"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/clForJunior"
                android:layout_marginTop="8dp">

            <TextView
                    android:text="Middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipMiddle"
                    app:layout_constraintBottom_toBottomOf="@+id/ipMiddle"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipMiddle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:hint="number"
                    android:gravity="right" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/clForJunior"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp">

            <TextView
                    android:text="Junior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ipJunior"
                    app:layout_constraintTop_toTopOf="@+id/ipJunior"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipJunior" app:layout_constraintStart_toEndOf="@+id/textView5"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="right" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:id="@+id/constraintLayout2">

            <CheckBox
                    android:text="Gender Mode "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cbGender"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/cbGrade" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
            <CheckBox
                    android:text="Grade Mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cbGrade"
                    app:layout_constraintTop_toTopOf="@+id/cbGender"
                    app:layout_constraintBottom_toBottomOf="@+id/cbGender" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toEndOf="@+id/cbGender"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline" app:layout_constraintGuide_percent="0.5012658"/>
        <TextView
                android:text="How Many People?? (Choose Mode)"
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:id="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/clForTotal" app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp" android:layout_marginTop="16dp"/>
        <TextView
                android:text="How Much??"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="DO IT !!"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:id="@+id/btDoit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="36sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <TextView
            android:text="money"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/conclusion"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btDoit"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btClear"/>
    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btClear"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    />
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.6"/>

</android.support.constraint.ConstraintLayout>