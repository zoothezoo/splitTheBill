<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clForDiff"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btDoit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/ipDiff"
                app:layout_constraintStart_toEndOf="@+id/txDiff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="number"
                android:gravity="right" android:maxLength="5" android:minEms="5" android:maxEms="5"
                app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="Difference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txDiff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/ipDiff"
                app:layout_constraintTop_toTopOf="@+id/ipDiff"
                app:layout_constraintEnd_toStartOf="@+id/ipDiff"
                android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/constraintLayout"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/clForTotal"
                app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintBottom_toBottomOf="@+id/textView"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        >

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipTotal" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.51"
                    app:layout_constraintStart_toEndOf="@+id/txTotal"
                    android:hint="number" android:gravity="right"
                    android:maxLength="7" android:minEms="7" android:maxEms="7"/>
            <TextView
                    android:text="Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txTotal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/ipTotal"
                    app:layout_constraintTop_toTopOf="@+id/ipTotal"
                    app:layout_constraintEnd_toStartOf="@+id/ipTotal"
                    android:textSize="24sp"
                    android:gravity="center_horizontal|center_vertical"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/clForMen"
                app:layout_constraintEnd_toStartOf="@+id/clForWomen" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/clForSenior" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipMen" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="number" android:gravity="right"
                    android:maxLength="3" android:minEms="3" android:maxEms="3"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toEndOf="@+id/txMen"/>
            <TextView
                    android:text="Men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txMen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipMen"
                    app:layout_constraintBottom_toBottomOf="@+id/ipMen"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/ipMen"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clForWomen"
                app:layout_constraintTop_toTopOf="@+id/clForMen" app:layout_constraintBottom_toBottomOf="@+id/clForMen"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/clForMen" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipWomen" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:hint="number" android:gravity="right" android:maxLength="3" android:minEms="3"
                    android:maxEms="3"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txWomen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipWomen"
                    app:layout_constraintBottom_toBottomOf="@+id/ipWomen"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/ipWomen"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/clForSenior"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clForMen"
                app:layout_constraintEnd_toStartOf="@+id/clForMiddle" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="8dp">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipSenior"
                    android:hint="number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:singleLine="false"
                    android:selectAllOnFocus="false" android:gravity="right" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    android:maxLength="3" android:minEms="3" android:maxEms="3" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
            <TextView
                    android:text="Senior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipSenior"
                    app:layout_constraintBottom_toBottomOf="@+id/ipSenior"
                    app:layout_constraintEnd_toStartOf="@+id/ipSenior"
                    android:gravity="center_horizontal|center_vertical" android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/clForMiddle"
                app:layout_constraintTop_toTopOf="@+id/clForSenior"
                app:layout_constraintBottom_toBottomOf="@+id/clForSenior"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/clForSenior"
                app:layout_constraintEnd_toStartOf="@+id/clForJunior" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

            <TextView
                    android:text="Middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ipMiddle"
                    app:layout_constraintBottom_toBottomOf="@+id/ipMiddle"
                    app:layout_constraintEnd_toStartOf="@+id/ipMiddle"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipMiddle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="parent"
                    android:hint="number"
                    android:gravity="right"
                    app:layout_constraintBottom_toBottomOf="parent" android:maxLength="3" android:minEms="3"
                    android:maxEms="3" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="46dp" android:id="@+id/clForJunior"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/clForMiddle"
                app:layout_constraintBottom_toBottomOf="@+id/clForMiddle"
                app:layout_constraintStart_toEndOf="@+id/clForMiddle" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp">

            <TextView
                    android:text="Junior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/ipJunior"
                    app:layout_constraintTop_toTopOf="@+id/ipJunior" app:layout_constraintEnd_toStartOf="@+id/ipJunior"
                    android:gravity="center_horizontal|center_vertical" android:textSize="18sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ipJunior" app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="right"
                    android:maxLength="3"
                    android:minEms="3" android:maxEms="3" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:id="@+id/constraintLayout2"
                app:layout_constraintHorizontal_bias="0.053" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent">

            <CheckBox
                    android:text="Gender Mode "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cbGender"
                    app:layout_constraintStart_toStartOf="@+id/cbGrade"
                    app:layout_constraintEnd_toEndOf="@+id/cbGrade" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <CheckBox
                    android:text="Grade Mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cbGrade"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cbGender" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline" app:layout_constraintGuide_percent="0.34"/>
        <TextView
                android:text="How Many People?? (Choose Mode)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/clForTotal" app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout2" app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="How Much??"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/clForTotal"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="DO IT !!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btDoit"
            android:textSize="36sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/btClear"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.464" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btClear"
            app:layout_constraintTop_toTopOf="@+id/btDoit" app:layout_constraintBottom_toBottomOf="@+id/btDoit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btDoit"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="1.0"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.67"/>

</android.support.constraint.ConstraintLayout>